{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["DOM", "ES2022"],
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"useUnknownInCatchVariables": true,
		"noEmit": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"]
}
