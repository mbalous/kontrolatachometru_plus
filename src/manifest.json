{
  "manifest_version": 3,
  "name": "Kontrola Tachometru Plus",
  "version": "1.0.0",
  "description": "Zobraz√≠ graf stavu tachometru na kontrolatachometru.cz",
  "permissions": [],
  "browser_specific_settings": {
    "gecko": {
      "id": "kontrolatachometru-plus@local",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.kontrolatachometru.cz/*",
        "*://kontrolatachometru.cz/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}